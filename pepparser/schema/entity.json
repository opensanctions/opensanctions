{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://schema.opennames.org/entity.json#",
  "title": "PEP/POI Entity",
  "description": "An entity - indivdual or organisation - of political or criminal interest",
  "type": "object",
  "additionalProperties": false,
  "required": ["uid", "name", "type"],
  "properties": {
    "uid": {
      "title": "Unique ID",
      "type": "string",
      "minLength": 2,
      "maxLength": 1024,
      "pattern": "^[a-zA-Z0-9:\\-]*$"
    },
    "name": {
      "title": "Primary name",
      "type": "string",
      "minLength": 2,
      "maxLength": 4000
    },
    "first_name": {
      "title": "First (given) name",
      "type": "string"
    },
    "second_name": {
      "title": "Second (given) name",
      "type": "string"
    },
    "middle_name": {
      "title": "Middle name",
      "type": "string"
    },
    "last_name": {
      "title": "Last name",
      "type": "string"
    },
    "type": {
      "title": "Type of entity",
      "enum": ["entity", "individual"]
    },
    "program": {
      "title": "Program",
      "description": "Program under which the entity is sanctioned",
      "type": ["null", "string"]
    },
    "function": {
      "title": "Function",
      "description": "A bio or sentence describing the entity",
      "type": ["null", "string"]
    },
    "summary": {
      "title": "Summary",
      "description": "A short reason for sanctioning the entity",
      "type": ["null", "string"]
    },
    "addresses": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/address"
      }
    },
    "date_of_birth": {
      "title": "Date of birth",
      "type": "string",
      "pattern": "^\\d{4}(-\\d{2}-\\d{2})?$"
    },
    "place_of_birth": {
      "title": "Place of birth",
      "type": "string"
    },
    "gender": {
      "title": "Gender",
      "enum": ["male", "female"]
    },
    "other_names": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/aka"
      }
    },
    "identities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/identity"
      }
    },
    "source": {
      "title": "Source",
      "type": "string",
      "minLength": 2,
      "maxLength": 4000
    },
    "source_url": {
      "title": "Source URL",
      "type": "string",
      "format": "uri"
    },
    "publisher": {
      "title": "Publishing organisation",
      "type": "string",
      "minLength": 2,
      "maxLength": 4000
    },
    "publisher_url": {
      "title": "Publisher URL",
      "type": "string",
      "format": "uri"
    },
    "updated_at": {
      "title": "Updated at",
      "type": "string",
      "format": "date"
    }
  },
  "definitions": {
    "address": {
      "title": "A known address",
      "type": "object",
      "properties": {
        "text": {
          "title": "Text",
          "type": "string"
        },
        "address1": {
          "title": "Street address",
          "type": "string"
        },
        "address2": {
          "title": "Street address (continued)",
          "type": "string"
        },
        "city": {
          "title": "City/Town",
          "type": "string"
        },
        "region": {
          "title": "Region",
          "type": "string"
        },
        "postal_code": {
          "title": "Postal code",
          "type": "string"
        },
        "country": {
          "title": "Country code",
          "type": "string",
          "format": "country-code"
        }
      }
    },
    "aka": {
      "title": "An alternate name (a.k.a.)",
      "type": "object",
      "required": ["other_name"],
      "properties": {
        "type": {
          "title": "Type",
          "type": "string"
        },
        "quality": {
          "title": "Quality",
          "type": "string"
        },
        "other_name": {
          "title": "Alternate name",
          "type": "string"
        },
        "first_name": {
          "title": "First (given) name",
          "type": "string"
        },
        "last_name": {
          "title": "Last name",
          "type": "string"
        }
      }
    },
    "identity": {
      "title": "Identity, such as passport of tax ID",
      "type": "object",
      "properties": {
        "number": {
          "title": "Number",
          "type": "string"
        },
        "type": {
          "title": "Type",
          "type": "string"
        },
        "country": {
          "title": "Country code",
          "type": "string",
          "format": "country-code"
        }
      }
    }
  }
}
